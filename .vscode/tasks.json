{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: mkdocs serve (docker run)",
      "type": "shell",
      "command": "docker run --rm --name mkdocs-dev -it -p ${config:mkdocs.port}:${config:mkdocs.port} -v ${workspaceFolder}:/docs:z squidfunk/mkdocs-material serve --dev-addr 0.0.0.0:8000",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Building documentation",
          "endsPattern": "Serving on http://"
        }
      }
    },
    {
      "label": "Dev: mkdocs stop",
      "type": "shell",
      "command": "docker stop mkdocs-dev",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    }
  ]
}
